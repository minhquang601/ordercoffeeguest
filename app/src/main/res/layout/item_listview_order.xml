<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:background="#e6eabc"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:textAlignment="center"
            android:id="@+id/list_order_id"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:textColor="#000"
            android:text="ID"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_weight="3"
            android:textAlignment="center"
            android:text="Name"
            android:id="@+id/list_order_name"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="x10"
            android:id="@+id/list_order_amount"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="$100"
            android:id="@+id/list_order_price"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/list_order_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/content" />

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="18dp"
            android:id="@+id/list_order_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/garbage" />
    </LinearLayout>
</android.support.v7.widget.CardView>
